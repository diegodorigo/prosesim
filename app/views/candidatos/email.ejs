<!DOCTYPE html>
<html>
	<head>
		<title>PROSESIM | Verificação</title>
		<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
		<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
		<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
		<link href="css/style.css" rel="stylesheet">
		<script src="js/input_mask.js"></script>
	</head>

	<body class="bodylogin">			
		<div id="login">
			<div class="topopagina">
				<img src="images/logo.jpg" class="mx-auto d-block">
			</div>						
			<h3 class="text-center text-white pt-4">SECRETARIA MUNICIPAL DE EDUCAÇÃO</h3>
			<h5 class="text-center text-white pt-3">PROCESSO SELETIVO SIMPLIFICADO - EDITAL Nº 006/2018</h5>
			<div class="container">
				<div class="container">
					<div class="row justify-content-center">				
						<% if (validacao.length > 0) { %>
							<div class="col-sm-6">
								<div class="alert alert-danger">
									<strong>Atenção!</strong>
									<ul>
										<% for(var i = 0; i < validacao.length; i++) { %>									
											<li><%= validacao[i].msg %></li>
										<% } %>
									</ul>
								</div>
							</div>						
						<% } %>
					</div>
				</div>
				<div class="container">	
					<div class="row justify-content-center">			
						<% if (informacao.length > 0) { %>
							<div class="col-sm-6">
								<div class="alert alert-success">
									<strong>Tudo certo!</strong>
									<ul>
										<% for(var i = 0; i < informacao.length; i++) { %>									
											<li><%= informacao[i].msg %></li>
										<% } %>
									</ul>
								</div>
							</div>						
						<% } %>
					</div>	
				</div>
				<div id="login-row" class="row justify-content-center align-items-center">
					<div id="login-column" class="col-sm-6">
						<div id="login-box" class="col-sm-12">		
							<br/>
							<h3 class="text-center text-info">Verificação de e-mail</h3>									
							<!-- EMAIL -->
							<form class="form" action="/email" method="post">							
								<div class="col-sm-12">
									<label class="text-info">E-mail do candidato</label>
									<input type="email" name="email" id="email" value="<%=dadosForm.email%>" class="form-control" placeholder="Informe um e-mail e clique no botão Enviar..." style="font-size:13px" maxlength="120">
								</div>		
								<div class="col-sm-12"> 
									<p></p>									
									<input type="submit" class="btn btn-info btn-sm" value="Enviar">
								</div>
							</form>	
							<br/>		
							<!-- VERIFICA -->
							<form class="form" action="/verificar" method="post">
								<input type="hidden" name="email" id="email" value="<%=dadosForm.email%>" class="form-control">
								<input type="hidden" name="codVerificador" id="codVerificador" value="<%=dadosForm.codVerificador%>" class="form-control">					
								<div class="col-sm-12">
									<label class="text-info">Código verificador</label>
									<input type="text" name="verificador" id="verificador" value="<%=dadosForm.verificador%>" class="form-control" placeholder="Cole aqui o código enviado para o e-mail informado acima..." style="font-size:13px">
								</div>								
								<div class="col-sm-12"> 
									<p></p>									
									<input type="submit" class="btn btn-info btn-sm" value="Verificar">
								</div>
							</form>	
						</div>			
					</div>
				</div>
			</div>
		</div>				
	</body>
</html>